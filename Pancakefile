
BUILDIR='./build'

target 'build',
    desc: 'Build the whole system'
    depends: [ 'compile' ]
    action: -> console.log "Build" 

target 'compile',
    desc: 'Compile files'
    action: ->
        console.log "Compile"
        do compile '**.coffee', BUILDIR

target 'copy',
    action: copy("**.coffee", "dest")

target 'install',
    depends: [ 'build', 'copy' ]
    action: -> console.log "Install" 

target 'clean',
    desc: 'Clean the buid directory. Remove everything!'
    action: rm BUILDIR

target 'all',
    depends: [ 'build', 'install' ]
